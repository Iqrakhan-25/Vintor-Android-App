<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <FrameLayout
                android:layout_width="44dp"
                android:layout_height="44dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/postUserImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImage"
                    android:src="@drawable/ic_default_avatar"
                    android:clipToOutline="true" />
                <View
                    android:id="@+id/onlineStatusDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/green_dot"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp" />
            </FrameLayout>
            <!-- Username takes remaining space -->
            <TextView
                android:id="@+id/postUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Name"
                android:fontFamily="@font/agbalumo_regular"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />

            <!-- Menu icon always at end -->
            <ImageView
                android:id="@+id/postMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Post Menu"
                app:tint="@android:color/black" />
        </LinearLayout>
        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post content goes here..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/postTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:textColor="#777"
            android:layout_marginTop="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:padding="4dp"
                android:src="@drawable/ic_like"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="4dp" />
            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="30dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_chat"
                android:padding="4dp"
                android:backgroundTint="@color/black"
                android:contentDescription="@null"
                app:tint="@color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
