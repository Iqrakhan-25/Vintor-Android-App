<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">
            <!-- Top App Bar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#E04E8F"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:title="User Profile"
                app:titleTextColor="@android:color/white"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:navigationIconTint="@android:color/white" />
            <!-- Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@android:color/darker_gray"
                android:backgroundTint="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/userProfileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircularImage"
                        android:src="@drawable/ic_default_avatar" />
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/userBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User bio will appear here"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>
                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@email.com"
                        android:layout_marginTop="4dp"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"/>
                    <TextView
                        android:id="@+id/userCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City Name"
                        android:layout_marginTop="2dp"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="4"
                        android:layout_marginVertical="10dp">
                        <TextView
                            android:id="@+id/userFollowers"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0\nFollowers"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/userFollowing"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0\nFollowing"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/postsCount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0\nPosts"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/likesCount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0\nLikes"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:id="@+id/btnFollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp"
                            android:text="Follow"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/btn_gradient"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/btnMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp"
                            android:text="Message"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/btn_gradient"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- User Posts List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUserPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"/>
            <TextView
                android:id="@+id/emptyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No posts yet."
                android:textAlignment="center"
                android:visibility="gone"
                android:padding="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
